<Window x:Class="BattleShip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Battle Ship" Height="600" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="ThreeDBorderWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="240*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.RowSpan="3">
            <Button Name="Button1" Content="Load Player 1" Height="35" Click="Button_Click"/>
            <Button Name="Button2" Content="Load Player 2" Height="35" Click="Button_Click"/>
            <Button Content="Start" Height="35" Click="StartButton_Click"/>
            <!--<TextBox Name="TxtContent"  TextWrapping="Wrap" Height="386" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto"/>-->
            <Canvas Name="battleBoard"></Canvas>
        </StackPanel>
    </Grid>
</Window>
